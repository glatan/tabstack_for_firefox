{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "webextensions": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "no-var": 2,
    "no-console": 0,
    "indent": ["error", 2, {
      "SwitchCase": 1 
    }],
    "semi": ["error", "never"]
  }
}
